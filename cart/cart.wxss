page{
    background-color: #ffffff;
    font-family: "Helvetica Neue","Hiragino Sans GB","Microsoft YaHei","\9ED1\4F53",Arial,sans-serif;
    font-size: 32rpx;
}
.navigator-hover{
    background: none;
}

.cart-box{
    padding-bottom: 100rpx;
}
.company_name {
  padding:20rpx 0 20rpx 80rpx;
  border-bottom: 1px solid #e9e9e9;
  }
.company_name image{
  width:50rpx;
  float: left;
  margin-left: -60rpx;
}
.company_name text{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  display: block;
}
.cart-list{
    position: relative;
    padding: 20rpx 20rpx 20rpx 285rpx;
    height: 185rpx;
    border-bottom: 1rpx solid #e9e9e9;
}
.cart-list .cart-pro-select{
    position: absolute;
    left: 20rpx;
    top: 90rpx;
    width: 45rpx;
    height: 45rpx;
}

.cart-list .cart-thumb{
    position: absolute;
    top: 20rpx;
    left: 85rpx;
    width: 185rpx;
    height: 185rpx;
}
.cart-list .cart-pro-name{
    display: inline-block;
    width: 300rpx;
    height: 105rpx;
    line-height: 50rpx;
    overflow: hidden;
}
.cart-list .cart-pro-price{
    display: inline-block;
    float: right;
    height: 105rpx;
    line-height: 50rpx;
}
.cart-list .cart-count-box{
    border: 1px solid #ccc;
    position: absolute;
    left: 285;
    bottom: 20rpx;
    width: 210rpx;
    height: 60rpx;
}
.cart-list .cart-count-box text{
    display: inline-block;
    line-height: 60rpx;
    text-align: center;
}
.cart-count-down,.cart-count-add{
    width: 50rpx;
    height: 100%;
}
.cart-count-num{
    border-left: 1px solid #ccc;
    border-right: 1px solid #ccc;
    width: 100rpx;
}
.cart-del{
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 44rpx;
}
.cart-footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    padding:0 160rpx 0 80rpx;
    box-sizing: border-box;
    background: #FF2233;
    color: #fff;
}
.total-select{
    position: absolute;
    left: 20rpx;
    top: 25rpx;
    width: 45rpx;
    height: 45rpx;
}
.order-icon{
    padding: 0 20rpx;
    position: absolute;
    right: 20rpx;
    background-size: 100%;
}
.cart-toatl-price{
    float: right;
}

.cart-no-data{
    padding:40rpx 0;
    color: #999;
    text-align: center;
}